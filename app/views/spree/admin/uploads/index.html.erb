<% content_for :page_title do %>
  <%= t(:listing_uploads) %>
<% end %>

<% content_for :page_actions do %>
  <li id="new_product_link">
    <%= button_link_to t('.new_upload'), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_upload' } %>
  </li>
<% end %>

<%= render :partial => 'spree/admin/shared/contents_sub_menu' %>

<table class="index">
  <thead>
    <tr>
      <th><%= t("thumbnail") %></th>
      <th><%= sort_link @search, :attachment_file_name, t("upload.file_name") %></th>
      <th><%= sort_link @search, :description, t("description") %></th>
      <th><%= sort_link @search, :attachment_file_size, t("upload.size") %></th>
      <th class="actions" style="width: 100px"><%= t("action") %></th>
    </tr>
  </thead>
  <% @uploads.each do |upload| %>
    <tr id="<%= dom_id(upload) %>" class="<%= cycle('odd', 'even') %>">
      <td class="thumbnail">
        <% if upload.image_content? %>
          <%= link_to image_tag(upload.attachment.url(:mini)), upload.attachment.url(:large) %>
        <% end %>
      </td>
      <td><%= link_to upload.attachment_file_name, upload.attachment.url(:original) %></td>
      <td><%= upload.alt %></td>
      <td><%= upload.attachment_file_size.to_i / 1024 %>&nbsp;kb</td>
      <td class="actions">
        <%= link_to_edit upload, no_text: true %>
        &nbsp;
        <%= link_to_delete upload, {:url => admin_upload_url(upload), no_text: true }%>
      </td>
    </tr>
  <% end %>

</table>

<%= paginate @uploads %>

<% content_for :sidebar_title do %>
  <%= t(:search) %>
<% end %>

<% content_for :sidebar do %>

<div class="box">
  <%= search_form_for [ :admin, @search ] do |f| %>
    <div class="field">
      <%= f.label :alt_cont, t("description") %>
      <%= f.text_field :alt_cont, :size => 25 %>
    </div>
    <div class="field"><%= button t("search") %></div>
  <% end %>
</div>
<% end %>

<div id="images"></div>
<br/>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){

      jQuery('#new_image_link').click(function(event) {
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#images').html(r);} });
      });

    });
  </script>
<% end %>